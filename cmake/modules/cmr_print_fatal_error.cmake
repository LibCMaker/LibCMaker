function(cmr_print_fatal_error)
  message("")
  foreach(arg ${ARGV})
    message("[LibCMaker ** FATAL ERROR **] ${arg}")
  endforeach()
  message("[LibCMaker ** FATAL ERROR **] [Directory: ${CMAKE_CURRENT_LIST_DIR}]")
  message("")
  message(FATAL_ERROR "")
endfunction()
